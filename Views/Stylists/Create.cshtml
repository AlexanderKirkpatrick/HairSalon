@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a New Stylist</h4>
<br>
<br>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  @Html.LabelFor(model => model.Rate)
  @Html.TextBoxFor(model => model.Rate)
  <br>
  <br>
  <input type="submit" value="Add New Stylist" />
}
<br>
<br>
<br>
<p>@Html.ActionLink("Show All Stylists", "Index")</p>
